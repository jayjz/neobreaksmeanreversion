# Hybrid Trader Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Alpaca API Credentials (Required)
# =============================================================================
# Get your keys from https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here

# =============================================================================
# Trading Mode (Required for live trading)
# =============================================================================
# Options: PAPER (default) or LIVE
TRADING_MODE=PAPER

# Safety flag: Must be set to "true" for live trading to work
# This is a deliberate safety mechanism to prevent accidental live orders
LIVE_TRADING_ENABLED=false

# =============================================================================
# Asset Configuration
# =============================================================================
# Comma-separated list of equity symbols (S&P 500 components recommended)
EQUITY_TICKERS=AAPL,MSFT,GOOGL,AMZN,META

# Comma-separated list of crypto symbols (Alpaca format: SYMBOL-USD)
CRYPTO_TICKERS=BTC-USD,ETH-USD

# =============================================================================
# Data Configuration
# =============================================================================
# Number of days of historical data to fetch for analysis
LOOKBACK_DAYS=60

# =============================================================================
# Risk Limits
# =============================================================================
# Maximum value of any single order (in USD)
MAX_ORDER_VALUE=10000

# =============================================================================
# Cycle Configuration
# =============================================================================
# Minutes between trading cycles
CYCLE_INTERVAL_MINUTES=60
